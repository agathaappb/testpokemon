<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:id="@+id/txt_name_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name PokÃ©mon"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txt_title_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_pokemon"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="16sp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_type"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_pokemon"/>

        <TextView
            android:id="@+id/txt_title_weaknesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weaknesses:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_type"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/txt_weaknesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weaknesses"
            android:textSize="16sp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@+id/txt_title_weaknesses"
            app:layout_constraintTop_toBottomOf="@+id/txt_type"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:background="@mipmap/ic_launcher_round"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_margin="16dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_weaknesses"/>
        <View
            android:id="@+id/baseline"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/teal_200"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/btn_aqui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Aqui"
            android:textAllCaps="false"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/baseline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>